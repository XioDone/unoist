{
  "name": "unoist",
  "type": "module",
  "version": "0.0.3",
  "packageManager": "pnpm@9.12.2",
  "description": "Make using UnoCSS simpler and easier.",
  "author": "XioDone",
  "license": "MIT",
  "homepage": "https://github.com/XioDone/eslint-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XioDone/unoist.git"
  },
  "bugs": {
    "url": "https://github.com/XioDone/unoist/issues"
  },
  "keywords": [
    "uno",
    "unoist",
    "unocss",
    "unocss utils",
    "unocss helper",
    "atomic-css",
    "atomic-css-engine",
    "tailwind",
    "windicss",
    "unocss-preset",
    "ui"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "pnpm build",
    "tsup:build": "tsup-node",
    "build": "unbuild",
    "stub": "unbuild --stub",
    "dev": "pnpm tsup:build --watch",
    "demo": "pnpm -C example run dev",
    "release": "bumpp && npm publish",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "up": "bunx taze latest -rI",
    "c": "rm -rf node_modules dist example/node_modules pnpm-lock.yaml package-lock.json bun.lockb"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.8.0",
    "@types/node": "^22.7.6",
    "@xiodone/eslint-config": "^1.0.1",
    "bumpp": "^9.7.1",
    "eslint": "^9.12.0",
    "lint-staged": "^15.2.10",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "unbuild": "^2.0.0",
    "unocss": "^0.63.4",
    "vite-plugin-url-copy": "latest"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
